<%- include('../parts/head.ejs')%>
    <title>
        <%=docTitle%>
    </title>
    <link rel="stylesheet" href="/css/shop-cart.css">

    </head>

    <body>
        <%- include('../parts/header.ejs')%>
            <div class="container pb-5 mt-n2 mt-md-n3">
                <div class="row">
                    <div class="col-xl-9 col-md-8">
                        <h2 class="h6 d-flex flex-wrap justify-content-between align-items-center px-4 py-3 bg-secondary"><span>Categories</span><a class="font-size-sm" href=""><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-left" style="width: 1rem; height: 1rem;"><polyline points="15 18 9 12 15 6"></polyline></svg> </a></h2>
                        <!-- Item-->
                        <% if(prods.length>0){
                            for(let product of prods){%>
                            <div class="d-sm-flex justify-content-between my-4 pb-4 border-bottom">
                                <div class="media d-block d-sm-flex text-sm-left">
                                    <a class="cart-item-thumb mx-auto mr-sm-4" href="#"><img height="200px" width="200px" src="<%= product.imageUrl%>" alt="Product"></a>
                                    <div class="media-body pt-3">
                                        <h3 class="title product-card-title font-weight-semibold border-0 pb-0">
                                            <a href="admin/products/<%= product._id%>">
                                                <%= product.title%>
                                            </a>
                                        </h3>
                                        <div class="font-size-lg text-primary pt-2">
                                            Price:
                                            <%= product.price%>
                                        </div>
                                        <div class="font-size-lg text-primary pt-2">
                                            Description:
                                            <%= product.description%>
                                        </div>
                                    </div>
                                </div>
                                <div class="pt-2 pt-sm-0 pl-sm-3 mx-auto mx-sm-0 text-center text-sm-left" style="max-width: 10rem;">
                                    <div class="form-group mb-2">
                                        <label for="quantity1">Products</label>
                                        <div class="font-size-lg text-primary pt-2">
                                            Quntity:
                                            <%= product.quntity%>
                                        </div>
                                    </div>
                                    <button class="btnUrl btn btn-secondary btn-sm btn-block mb-2" type="button">
                               
                                <a class="url" href="/admin/edit/product/<%= product._id%>">
                                Update
                                </a>
                                </button><br>
                                    <button class="btnUrl btn btn-danger btn-sm btn-block mb-2" type="button">
                                <a class="url" href="/admin/delete/product/<%= product._id%>">
                                Remove
                                </a>
                                </button>
                                </div>
                            </div>
                            <%}
                    }
                    else{%>
                                <h2>Sorry!! No Products.</h2>
                                <%}%>
                    </div>


                </div>
            </div>

    </body>

    </html>